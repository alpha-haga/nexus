{
  "realm": "nexus",
  "enabled": true,
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "sslRequired": "external",
  "clients": [
    {
      "clientId": "nexus-frontend",
      "enabled": true,
      "publicClient": false,
      "secret": "nexus-frontend-secret",
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000"
      ],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "protocol": "openid-connect",
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:3000/*"
      },
      "protocolMappers": [
        {
          "name": "employeeId",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "employeeId",
            "claim.name": "employeeId",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "corporationId",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "corporationId",
            "claim.name": "corporationId",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "corporationName",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "corporationName",
            "claim.name": "corporationName",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "dev-user",
      "email": "dev-user@example.com",
      "enabled": true,
      "firstName": "開発",
      "lastName": "ユーザー",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "attributes": {
        "employeeId": ["E001"],
        "corporationId": ["corp-001"],
        "corporationName": ["サンプル法人"]
      }
    }
  ]
}
